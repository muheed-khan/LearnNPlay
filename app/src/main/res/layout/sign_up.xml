<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Background image -->
    <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:scaleType="centerCrop"/>


    <!-- Linear Layout for Signup -->
    <LinearLayout
            android:layout_width="394dp"
            android:layout_height="517dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:gravity="center">

        <!-- Title for Signup Page -->
        <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Sign Up"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        <!-- Full Name (Student) EditText -->
        <EditText
                android:id="@+id/fullNameStudentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Full Name (Student)"
                android:textColorHint="@android:color/black"
                android:textColor="@color/black"/>

        <!-- Full Name (Parent) EditText -->
        <EditText
                android:id="@+id/fullNameParentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Full Name (Parent)"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"/>

        <!-- Email EditText -->
        <EditText
                android:id="@+id/emailSignUpEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Email"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"/>

        <!-- Password EditText -->
        <EditText
                android:id="@+id/passwordSignUpEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Password"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:inputType="textPassword"/>

        <!-- Register Button -->
        <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Register Me!!"/>

    </LinearLayout>
</FrameLayout>
